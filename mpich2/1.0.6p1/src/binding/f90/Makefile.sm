# We need a free-format version of mpif.h with no external commands
mpifnoext.h: ../f77/mpif.h
	rm -f mpifnoext.h
	sed -e 's/^C/\!/g' -e '/EXTERNAL/d' \
		-e '/DOUBLE PRECISION/d' ../f77/mpif.h > mpifnoext.h

